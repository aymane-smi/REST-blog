<%include ./partiels/header%>
<div class="ui main text container">
		<div class="ui top attached segment">
			<div class="ui huge header"><%=item.title%></div>
		<div class="item">
			<img src="<%=item.image%>" class="ui centered rounded image"
			>
			<dir class="meta">
				<span><%= item.created.toDateString()%></span>
			</dir>
			<dir class="description">
				<p><%-item.body%></p>
			</dir>
		</div>
		<a class=" ui blue big basic button" href="/blogs/<%=item._id%>/edit">edit</a>
		<form action="/blogs/<%=item._id%>?_method=DELETE" method="post" id="delete">
			<button class="ui red big basci button">delete</button>
		</form>
	</div>
</div>
<%include ./partiels/footer%>